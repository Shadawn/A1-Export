				ЭлементСобытияПеред.УстановитьАтрибут("callType", "Before");
				ЭлементСобытияПеред.ТекстовоеСодержимое = "А1ЭМ_" + ОписаниеСобытия.Имя + "Перед";
			Иначе
				ТекстовоеСодержимое = ОписаниеСобытия.Имя;
			КонецЕсли;
